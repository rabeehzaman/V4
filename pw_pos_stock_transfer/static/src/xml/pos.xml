<?xml version="1.0" encoding="UTF-8"?>
<template id="template" xml:space="preserve">
    <t t-name="pw_pos_stock_transfer.TransferButton">
        <span class="control-button btn btn-light rounded-0 fw-bolder" t-on-click="() => this.click()">
            <i class="fa fa-truck me-1"></i>
            <span> </span>
            <span>Stock Transfer</span>
        </span>
    </t>
    <t t-name="pw_pos_stock_transfer.StockTransferPopup">
        <div class="popup popup-selection">
            <div class="popup popup-textinput">
                <div class="modal-header">
                    <h4 class="modal-title"><t t-esc="props.title" /></h4>
                </div>
                <div class="modal-body">
                    <div style="text-align: left;">
                        <table class="pw-stock-transfer-popup" style="width: 100%;">
                            <tr>
                                <td></td>
                                <td>
                                    <div class="form-check o_radio_item">
                                        <input type="radio" value="send" t-model="state.operation_type" checked="checked" t-on-change="changeOperationType"/>Send
                                        <input type="radio" value="receive" t-model="state.operation_type" t-on-change="changeOperationType"/>Receive
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td style="width: 30%;  "><strong><label id="label_operation">Send To:</label></strong></td>
                                <td>
                                    <select t-model="state.pw_shop_id" class="form-control" style="width: 60%;">
                                        <option style="font-size: 14px; padding: 5px;" value=''>Select Shop</option>
                                        <t t-foreach='props.pos_configs' t-as='config' t-key="config.id">
                                            <option t-att-value='config.id'> 
                                                <t t-esc='config.name'/>
                                            </option>
                                        </t>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>State : </strong></td>
                                <td>
                                    <select t-model="state.transfer_state" class="form-control" style="width: 60%;">
                                        <option style="padding: 5px;" value='draft'>Draft</option>
                                        <t t-if="props.pw_is_done">
                                            <option style="padding: 5px;" value='done'>Done</option>
                                        </t>
                                    </select>
                                </td>
                            </tr>
                        </table>
                        <div style="text-align: center;padding-top: 20px;">
                            <span id="pw_transfer_error" style="color: red; display: none;font-weight: 700;"/>
                        </div>
                    </div>
                </div>
                <footer class="footer cash-move modal-footer">
                    <button class="button confirm btn btn-lg btn-primary"
                        t-on-click="confirm">
                        Create Transfer
                    </button>
                    <button class="button cancel btn btn-lg btn-secondary" t-on-click="cancel">
                        Cancel
                    </button>
                </footer>
            </div>
        </div>
    </t>
    <t t-name="pw_pos_stock_transfer.STCustomMsgPopup">
        <div class="popup popup-error">
            <div class="modal-header">
                <h4 class="modal-title title">
                    <t t-esc="props.title" />
                </h4>
            </div>
            <main class="modal-body">
                <t t-esc="props.body" />
            </main>
            <div class="footer modal-footer">
                <div class="button cancel btn btn-lg btn-primary " t-on-click="confirm">
                    <t t-esc="props.confirmText" />
                </div>
            </div>
        </div>
    </t>
</template>
