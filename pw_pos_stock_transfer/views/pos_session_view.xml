<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="view_pos_session_form_inherit_transfer" model="ir.ui.view">
        <field name="name">pos.session.form.view.transfer</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="action_open_transfers" type="object" icon="fa-truck">
                    <field name="transfer_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
