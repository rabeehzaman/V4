<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="res_config_settings_view_form_add_stock_transfer">
            <field name="name">res.config.setting.form.extended.view</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@id='pos_interface_section']" position="inside">
                    <setting string="Stock Transfer" help="Create internal transfer from pos">
                        <field name="pw_enable_transfer"/>
                        <div class="content-group mt16" invisible="not pw_enable_transfer">
                            <label string="Shop Location" for="pw_stock_location_id" class="col-lg-3 o_light_label"/>
                            <field name="pw_stock_location_id" domain="[('company_id', '=', company_id), ('usage', '=', 'internal')]" required="pw_enable_transfer"/>
                        </div>
                        <div class="content-group mt16" invisible="not pw_enable_transfer">
                            <label string="Done State" for="pw_is_done" class="col-lg-3 o_light_label"/>
                            <field name="pw_is_done"/>
                        </div>
                    </setting>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
